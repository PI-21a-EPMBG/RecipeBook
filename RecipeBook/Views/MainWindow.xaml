                                </Viewbox>
                            </Grid>
                        </Button>
                        <!--КАТАЛОГ-->
                        <Button Grid.Row="3" Grid.Column="1" Background="White" Command="{Binding CatalogueToggleCommand}">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25*" />
                                    <ColumnDefinition Width="69*" />
                                </Grid.ColumnDefinitions>
                                <Image Source="/Interface/Icons/book_icon.png"/>
                                <Viewbox Grid.Column="1">
                                    <Grid>
                                        <TextBlock Text="   КАТАЛОГ   "/>
                                    </Grid>
                                </Viewbox>
                            </Grid>
                        </Button>
                        <!--ДОБАВИТЬ-->
