                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="90*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" Background="White" BorderBrush="Black" BorderThickness="2">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0*" />
                                    <ColumnDefinition Width="20*" />
                                    <ColumnDefinition Width="6*" />
                                    <ColumnDefinition Width="80*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10*" />
                                    <RowDefinition Height="20*" />
                                    <RowDefinition Height="60*" />
                                    <RowDefinition Height="10*" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="2">
                                    <Image Source="/Interface/Icons/035cook_113744.png"/>
                                </Grid>
                                <TextBlock Grid.Column="2" Grid.Row="1" Width="100"/>
                                <Border Grid.Column="3" Grid.Row="1" BorderThickness="0,0,0,2" BorderBrush="Black">
                                    <Viewbox>
