    <Window.Resources>
        <FontFamily x:Key="Helvetica">Interface/helvetica_regular.otf#Helvetica</FontFamily>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    
    <Window.Background>
        <ImageBrush ImageSource="/Interface/bg.jpg" Stretch="UniformToFill"/>
