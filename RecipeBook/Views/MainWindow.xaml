            <!--Боковая кнопка для появления панели-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0*" />
                    <RowDefinition Height="83*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="97*" />
                </Grid.ColumnDefinitions>
                <Border x:Name="border" Grid.Column="0" Grid.Row="1" Background="#FFF0F0F0" Opacity="0.7">
                    <Viewbox>
                        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Text=">"/>
