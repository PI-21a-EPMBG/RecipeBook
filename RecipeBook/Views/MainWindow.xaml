                            </Grid>
                            <TextBlock Grid.Column="2" Grid.Row="1" Width="100"/>
                            <Border Grid.Column="3" Grid.Row="1" BorderThickness="0,0,0,2" BorderBrush="Black">
                                <Viewbox>
                                    <TextBlock Text="СОЗДАЙ СВОЙ КУЛИНАРНЫЙ ШЕДЕВР" HorizontalAlignment="Center"/>
                                </Viewbox>
                            </Border>
                            <TextBlock TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Grid.Column="3" Grid.Row="2" Text="Привет, мир! Привет, мир! Привет, мир! Привет, мир! Привет, мир! Привет, мир! Привет, мир! Привет, мир! Привет, мир! Привет, мир! Привет, мир! Привет, мир! Привет, мир!"/>
