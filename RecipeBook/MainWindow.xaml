<Window x:Class="RecipeBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeBook"
        mc:Ignorable="d"
        Title="Кулинарная книга" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="16">
            <MenuItem Header="Файл"/>
            <MenuItem Header=""/>
        </Menu>
        <TabControl>
            <TabItem Header="Рецепты">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="37"/>
                        <RowDefinition Height="353*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                        <TextBox MinWidth="200" Height="20" VerticalAlignment="Center"/>
                        <Button VerticalAlignment="Center"
                                Margin="10 0 0 0" Height="20" Width="60">Поиск!</Button>
                    </StackPanel>
                    

                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
